<Window x:Class="HotelReservatieApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelReservatieApp"
        mc:Ignorable="d"
        Title="Hotel Reservation" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" >

            <Button Content="Make Reservation" Command="{Binding MakeReservationCommand}" Width="200" Height="40" Margin="0,0,0,10"/>
            <Button Content="View Reservations" Command="{Binding ViewReservationsCommand}" Width="200" Height="40"/>

            <TextBlock x:Name="ErrorText" Foreground="Red" FontSize="14" Margin="10,20,10,0"/>

        </StackPanel>

    </Grid>
</Window>
